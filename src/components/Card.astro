---
import ArrowRight from "@/icons/ArrowRight.astro";

interface Props {
	title: string;
	logo: string;
	image: string;
	href: string;
	cta: string;
}

const { href, title, logo, image, cta } = Astro.props;
---

<li class="project-card">
	<div class="default">
		<picture>
			<img src={logo} alt="" />
		</picture>
	</div>

	<div class="info">
		<h3>
			{title}
		</h3>
		<a href={href} target="_blank">
			<button>
				<span>{cta}</span>
				<ArrowRight />
			</button>
		</a>
	</div>
</li>

<style>
	.project-card {
		list-style: none;
		display: grid;
		place-content: center;
		color: white;
		min-height: 215px;
		padding: 1px;
		background-color: hotpink;
		/* background-image: url("../projects/Nomi.png"); */
		opacity: 1;
		background-size: 120%;
		background-position: 100%;
		/* object-fit: fill; */
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		position: relative;
	}
	.info {
		position: absolute;
		widows: 100%;
		height: 100%;
		inset: 0;
		display: flex;
		flex-direction: column;
		justify-content: space-evenly;
		align-items: center;
		background-color: var(--clr-accent);
		/* background-image: url("../projects/Nomi.png"); */

		opacity: 0;
		transition: opacity 250ms ease-in;
	}
	.project-card:hover .info {
		opacity: 1;
	}
	.project-card .info > * {
		transform: translateY(16px);
		transition: transform 450ms ease;
	}

	.project-card:hover .info > * {
		transform: translateY(0);
	}
	a {
		text-decoration: none;
	}
	button {
		display: flex;
		align-items: center;
		gap: 4px;
		color: var(--clr-accent);
		font-size: var(--step--1);
		font-weight: 700;
		text-decoration: none;
		padding: 6px 8px;
		border-radius: 20px;
		background-color: white;
		width: fit-content;

		transition: background-color var(--spd-clr-hover) ease-in;
	}
	button:hover {
		cursor: pointer;
		background-color: var(--clr-btn-hover);
	}

	span {
		margin-top: 1px;
	}
	h3 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.default {
		opacity: 1;
		position: absolute;
		widows: 100%;
		height: 100%;
		inset: 0;
		background-color: aquamarine;
	}
</style>
